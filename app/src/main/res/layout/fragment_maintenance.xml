<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="72dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/maintenanceTitle"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:text="Planinis\naptarnavimas"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/maintenanceDateText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="16dp"
                android:padding="8dp"
                android:text="Data:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/maintenanceDate"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:gravity="center"
                android:hint="@string/chooseDate"
                android:onClick="setDate" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/maintenanceMileageText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="16dp"
                android:padding="8dp"
                android:text="Rida:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/maintenanceMileage"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Įveskite ridą"
                android:inputType="number" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/id_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="#F5F6FA"
            android:padding="4dp"
            android:text="Pultelio baterija"
            android:textSize="19sp" />

        <CheckBox
            android:id="@+id/id_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="#F5F6FA"
            android:padding="4dp"
            android:text="Priekinės/galinės stabdžių trinkelės"
            android:textSize="19sp" />

        <CheckBox
            android:id="@+id/id_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="#F5F6FA"
            android:padding="4dp"
            android:text="Aušinimo skystis"
            android:textSize="19sp" />

        <CheckBox
            android:id="@+id/id_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="#F5F6FA"
            android:padding="4dp"
            android:text="Transmisijos skystis"
            android:textSize="19sp" />

        <CheckBox
            android:id="@+id/id_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="#F5F6FA"
            android:padding="4dp"
            android:text="Oro filtro elementas"
            android:textSize="19sp" />

        <CheckBox
            android:id="@+id/id_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="#F5F6FA"
            android:padding="4dp"
            android:text="Kuro filtras"
            android:textSize="19sp" />

        <CheckBox
            android:id="@+id/id_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="#F5F6FA"
            android:padding="4dp"
            android:text="Dulkių filtras"
            android:textSize="19sp" />

        <CheckBox
            android:id="@+id/id_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="#F5F6FA"
            android:padding="4dp"
            android:text="Tepalo filtas"
            android:textSize="19sp" />

        <CheckBox
            android:id="@+id/id_9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="#F5F6FA"
            android:padding="4dp"
            android:text="Rantytasis trepecinis diržas"
            android:textSize="19sp" />

        <CheckBox
            android:id="@+id/id_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="#F5F6FA"
            android:padding="4dp"
            android:text="Stabdžių skystis"
            android:textSize="19sp" />

        <CheckBox
            android:id="@+id/id_11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="#F5F6FA"
            android:padding="4dp"
            android:text="Dantytasis diržas"
            android:textSize="19sp" />

        <CheckBox
            android:id="@+id/id_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:background="#F5F6FA"
            android:padding="4dp"
            android:text="Uždegimo/pakaitinimo žvakės"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/maintenanceComText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="16dp"
                android:padding="8dp"
                android:text="Komentarai:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/maintenanceCom"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:hint="Įveskite komentarus"
                android:inputType="textMultiLine"
                android:textSize="20sp" />
        </LinearLayout>

