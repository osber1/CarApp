<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="275dp"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Įveskite transporto priemonės duomenis:"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:id="@+id/heading"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/heading"
            android:layout_marginTop="16dp"
            android:hint="Įveskite pavadinimą"
            android:id="@+id/inputTitle"
            android:textSize="18sp"
            android:inputType="textMultiLine"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputTitle"
            android:layout_marginTop="0dp"
            android:hint="Įveskite aprašymą"
            android:textSize="18sp"
            android:id="@+id/inputAbout"
            android:inputType="textMultiLine"/>

        <TextView
            android:id="@+id/action_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputAbout"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:text="Išsaugoti"
            android:textColor="#7C63E4"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/action_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputAbout"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:text="Atšaukti"
            android:textColor="#7C63E4"
            android:textSize="18sp" />

    </RelativeLayout>


</RelativeLayout>